<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="co.gostyn.karson.bikinibeachbar.MainActivity"
    android:id="@+id/rl">



        <ImageView
            android:id="@+id/tlo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"

            android:src="@drawable/tlo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="10dp"
            android:src="@drawable/ic_logo_bbb_white" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="140dp"
            android:background="@drawable/btn_tlo_shape"
            android:text="@string/menu"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnWydarzenia"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnMenu"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_tlo_shape_fiolet"
            android:text="Wydarzenia"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnInformacje"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnWydarzenia"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_tlo_shape_fiolet"
            android:text="Informacje"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnZapraszamy"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_tlo_shape_zapraszamy"
            android:text="Zapraszamy w najbliÅ¼szy weekend"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />





</RelativeLayout>
